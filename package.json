{
  "name": "job-application-autofill-extension",
  "version": "0.0.6",
  "description": "A powerful Chrome/Brave browser extension for autofilling job applications and forms",
  "main": "background.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:cross-browser": "node test/browser-compatibility-runner.js",
    "test:browser-compatibility": "node validate-browser-compatibility.js",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:server": "node test/test-server.js",
    "lint": "eslint *.js test/*.js --fix",
    "lint:check": "eslint *.js test/*.js",
    "build": "node scripts/build-extension.js",
    "dev": "node scripts/dev-server.js",
    "docs:generate": "node scripts/generate-api-docs.js",
    "docs:site": "node scripts/docs-site-generator.js",
    "docs:serve": "node scripts/serve-docs.js",
    "docs:dev": "npm run docs:site && npm run docs:serve",
    "release:prepare": "node scripts/prepare-release.js",
    "release:create": "node scripts/create-release.js",
    "release:build": "node scripts/create-release.js build",
    "release:instructions": "node scripts/create-release.js instructions",
    "validate": "node scripts/validate-extension.js",
    "validate:browser-compatibility": "node scripts/validate-browser-compatibility.js",
    "changelog:generate": "node scripts/changelog-generator.js generate",
    "changelog:auto": "node scripts/changelog-generator.js generate --auto-version",
    "changelog:dry-run": "node scripts/changelog-generator.js generate --dry-run --auto-version",
    "version:increment": "node scripts/version-manager.js increment",
    "version:release": "node scripts/version-manager.js release",
    "release:notes": "node scripts/changelog-generator.js release-notes",
    "monitor:dashboard": "node scripts/monitoring-dashboard.js generate",
    "notify:success": "node scripts/notification-manager.js success",
    "notify:failure": "node scripts/notification-manager.js failure",
    "email:success": "node scripts/email-notification-service.js success",
    "email:failure": "node scripts/email-notification-service.js failure",
    "email:critical": "node scripts/email-notification-service.js critical",
    "email:summary": "node scripts/email-notification-service.js summary",
    "issues:deployment-failure": "node scripts/github-issue-manager.js deployment-failure",
    "issues:test-failure": "node scripts/github-issue-manager.js test-failure",
    "security:setup": "node scripts/setup-security.js run",
    "security:validate": "node scripts/credential-manager.js validate",
    "security:test": "node scripts/credential-manager.js test",
    "security:report": "node scripts/credential-manager.js report",
    "security:rotation-check": "node scripts/api-key-rotation.js check",
    "security:rotation-instructions": "node scripts/api-key-rotation.js oauth-instructions",
    "security:backup": "node scripts/api-key-rotation.js backup",
    "security:audit": "npm audit --audit-level=moderate && npx audit-ci --config .audit-ci.json"
  },
  "keywords": [
    "chrome-extension",
    "autofill",
    "job-application",
    "form-filler",
    "browser-extension",
    "manifest-v3"
  ],
  "author": "Sayantan Mandal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sayantanmandal1/job-application-autofill.git"
  },
  "bugs": {
    "url": "https://github.com/sayantanmandal1/job-application-autofill/issues"
  },
  "homepage": "https://github.com/sayantanmandal1/job-application-autofill#readme",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@vitest/coverage-v8": "^1.6.1",
    "audit-ci": "^6.6.1",
    "eslint": "^8.50.0",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.0",
    "jsdom": "^23.0.0",
    "playwright": "^1.40.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "semver": "^7.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "Chrome >= 88",
    "Edge >= 88"
  ],
  "manifest": {
    "version": 3,
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ]
  }
}
